/* lincec_store_share/pages/deliver/index.wxss */
page {
  font-size: 0.8rem;
}
.topExpress {
  /* width: 720rpx; */
  height: 180rpx;
  background: #f7f7f7;
  /* margin: 10rpx auto; */
  display: flex;
  border-radius: 5px;
}
.topExpress-left {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.topExpress-right {
  color: #333;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 10rpx;
}
.topExpress-right-middle {
  font-size: 0.8rem;
}
.topExpress-right-bottom {
  color: #666;
}
.express-container {
  width: 720rpx;
  margin: 10rpx auto;
  /* background: whitesmoke; */
  border-radius: 5px;
  padding: 10rpx 0;
  background-color: #fff;
}
.express-item {
  display: flex;
  width: 100%;
  justify-content: start;
  padding: 10px 0;
}
.express-middle-axis {
  display: flex;
  width: 48rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.express-left-date {
  display: flex;
  width: 200rpx;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.online-top-closing {
  width: 1px;
  height: 80rpx;
  background: #d7d7d7;
}
.dot-closing {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  background: #fe4f33;
}
.dot-shou {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #999;
  font-size: 18rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.online-bottom {
  width: 1px;
  height: 80rpx;
  background: #999;
}
.express-right {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin: 0 20rpx;
  justify-content: center;
}
.express-statusing {
  display: flex;
}
.express-status-address {
  display: flex;
}
