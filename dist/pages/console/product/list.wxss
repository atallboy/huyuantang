.add-btn {
  position: fixed;
  right: 30px;
  bottom: 100px;
  background-color: var(--bgColorMain);
  color: #fff;
  width: 40px;
  height: 40px;
  text-align: center;
  line-height: 36px;
  font-size: 26px;
  font-weight: bolder;
  border-radius: 100px;
  z-index: 9999;
}
.container {
  display: flex;
}
.imgbox {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-style: rgba(231, 231, 231, 0.6);
}
.imgbox .ui-image {
  width: 100%;
}
.small-title {
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
}
.goods-box {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  flex-direction: column;
}
.goods-box .goods-item {
  display: flex;
  width: 100%;
  padding: 12px 2px 12px 10px;
  flex-direction: column;
  background-color: #fff;
}
.goods-box .goods-info {
  display: flex;
}
.goods-box .goods-pic {
  display: flex;
  width: 90px;
  padding: 0 10px 0 0;
  height: 80px;
}
.goods-box .goods-pic image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.goods-box .goods-detail {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.goods-box .goods-name {
  height: 40px;
  font-size: 13px;
  color: #333;
}
.goods-box .goods-brief {
  display: flex;
  height: 24px;
}
.goods-box .goods-sale {
  display: flex;
  flex: 1;
  font-size: 12px;
  color: #999;
}
.goods-box .goods-price {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  font-size: 15px;
  color: #0072FD;
  padding-right: 10px;
}
.goods-box .goods-btn-wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 10px;
}
.goods-box .goods-btn {
  color: #333;
  font-size: 12px;
  border: 1rpx solid #ddd;
  border-radius: 100px;
  text-align: center;
  padding: 3px 15px;
  margin-right: 10px;
}
