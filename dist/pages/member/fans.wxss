page {
  background-color: var(--defaultBgColor);
}
.yj-container {
  padding: 10px;
}
.yj-wrap {
  display: flex;
  flex-direction: column;
}
.yj-item {
  display: flex;
  margin-bottom: 15px;
  background-size: 100% 100%;
  background-color: #fff;
  flex-direction: column;
  padding: 10px;
  border-radius: 4px;
}
.card-info {
  display: flex;
  height: 35px;
  align-items: center;
}
.card-number {
  display: flex;
  flex: 1;
}
.card-fee {
  display: flex;
  justify-content: flex-end;
}
.card-fee text {
  color: var(--ColorMain);
  font-weight: 650;
  margin-right: 3px;
}
.card-user {
  display: flex;
  padding: 10px 0;
}
.card-user-pic {
  display: flex;
  width: 50px;
  height: 50px;
}
.card-user-pic image {
  width: 100%;
  height: 100%;
  border-radius: 100px;
}
.card-user-name {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 10px;
}
.card-user-default .card-user-name {
  color: #666;
}
.card-time {
  display: flex;
  color: #666;
}
.card-time text {
  margin-left: 50px;
}
