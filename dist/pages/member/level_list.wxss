page {
  background-color: var(--defaultBgColor);
}
.level-list-container {
  padding: 10px;
}
.level-item {
  width: 100%;
  margin-bottom: 20px;
  border-radius: 5px;
  display: flex;
  background-color: #fff;
  border: 1rpx solid #409eff;
}
.level-pic {
  display: flex;
  flex: 1;
}
.level-pic image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.level-info {
  display: flex;
  flex-direction: column;
  padding-left: 8px;
  width: 130px;
}
.level-name {
  font-weight: 700;
  font-size: 16px;
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: center;
}
.level-remark {
  color: #999;
  margin-top: 6px;
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.level-remark-txt {
  height: 40px;
  line-height: 20px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.level-btn-wrap {
  display: flex;
  height: 50px;
  align-items: center;
  justify-content: center;
}
.level-btn {
  font-size: 12px;
  padding: 4px 15px;
  background-color: var(--ColorMain);
  color: #fff;
  border-radius: 100px;
}
.become-toast {
  width: 95%;
  background-color: #fff;
  height: 500px;
  margin: 0 auto;
  border-radius: 5px;
  overflow: hidden;
}
.condition-wrap {
  padding: 10px;
}
.condition-item {
  display: flex;
  padding: 0px 10px;
}
.condition-item-radio {
  display: flex;
  width: 50px;
  align-items: center;
}
.condition-info {
  display: flex;
  flex: 1;
  align-items: center;
  padding: 20px 0;
}
.condition-info-type-name {
  margin-right: 3px;
  color: var(--ColorMain);
}
.condition-info-type-msg {
  margin-left: 3px;
}
