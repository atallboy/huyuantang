page {
  background-color: #fff;
}
.tab-container {
  background-color: #FBF0EE;
}
.article-list-container {
  padding: 15px;
}
.article-list-wrap {
  display: flex;
  flex-direction: column;
}
.article-item {
  display: flex;
  padding: 20px 0;
  flex-direction: column;
}
.article-header {
  display: flex;
}
.article-title {
  display: flex;
  font-size: 16px;
  font-weight: 600;
  color: #222;
  flex: 1;
}
.article-pic {
  display: flex;
  width: 100px;
  height: 70px;
  padding-left: 10px;
}
.article-pic image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.article-info {
  display: flex;
  margin-top: 15px;
}
.article-time {
  display: flex;
  flex: 1;
  align-items: center;
  color: #666;
}
.article-score {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
  color: #ff4500;
}
.article-watch {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
  color: #666;
}
