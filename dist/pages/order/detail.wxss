page {
  background-color: var(--defaultBgColor);
}
.btn-complete {
  background-color: #006BFF;
  color: #fff;
}
.btn-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background-color: #fff;
}
.btn-wrap {
  height: 50px;
  border-top: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}
.btn-left {
  display: flex;
  width: 60px;
  align-items: center;
  justify-content: center;
}
.btn-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 1;
}
.btn-item {
  display: flex;
  padding: 4px 10px;
  border-radius: 100px;
  margin-right: 10px;
  border: 1rpx solid #ededed;
}
.order-g-wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
  font-size: 14px;
}
.order-g-item {
  display: flex;
  flex-direction: column;
}
.order-g-time {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 5px;
}
.order-g-time text {
  padding: 0 10px;
  height: 25px;
  line-height: 25px;
  font-size: 13px;
  font-weight: 650;
  text-align: center;
  border-radius: 100px;
  background-color: #F0F0F0;
}
.order-status {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  font-weight: 700;
  color: #111;
  background-color: #fff;
}
.order-g-detail {
  display: flex;
  flex-direction: column;
  padding: 20px !important;
  padding-bottom: 0 !important;
}
.order-g-no {
  display: flex;
  padding: 10px 0;
}
.order-g-order-no {
  display: flex;
  flex: 1;
  color: #000;
}
.order-g-status {
  display: flex;
  width: 80px;
  justify-content: flex-end;
}
.order-g-goods {
  display: flex;
  flex-direction: column;
}
.order-g-goods-item {
  display: flex;
  padding: 5px 0;
}
.order-g-goods-pic {
  display: flex;
  width: 70px;
  height: 70px;
}
.order-g-goods-pic image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.order-g-goods-info {
  display: flex;
  flex-direction: column;
  padding-left: 5px;
  flex: 1;
}
.order-g-goods-name {
  display: flex;
  font-size: 15px;
}
.order-g-goods-param {
  display: flex;
  font-size: 13px;
  color: #666;
  margin-top: 10px;
}
.order-g-goods-param-both {
  display: flex;
  font-size: 14px;
  flex: 1;
}
.order-g-goods-param-name {
  margin-right: 10px;
}
.order-g-goods-param-num {
  display: flex;
  font-size: 14px;
  width: 50px;
  justify-content: flex-end;
}
.order-g-total-info {
  display: flex;
  margin-top: 15px;
}
.order-g-deliver {
  display: flex;
}
.order-g-deliver text {
  background-color: #FFEFE2;
  color: #ff531a;
  font-size: 13px;
  padding: 3px 10px;
  border-radius: 100px;
}
.order-g-calc {
  display: flex;
  flex: 1;
  justify-content: flex-end;
  align-items: center;
}
.order-g-num {
  font-size: 13px;
  color: #666;
  margin-right: 10px;
}
.order-g-total-price {
  font-size: 15px;
  font-weight: 650;
}
.order-g-remark {
  display: flex;
  padding: 15px 0;
  color: #666;
  font-size: 13px;
}
.order-g-address {
  display: flex;
  padding: 15px !important;
  background-color: #fff;
}
.order-g-icon {
  display: flex;
  width: 40px;
  align-items: center;
  justify-content: center;
}
.order-g-icon image {
  width: 20px;
  height: 20px;
}
.order-g-address-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.order-g-address-t {
  display: flex;
  margin-bottom: 5px;
}
.order-g-address-name {
  font-size: 15px;
  margin-right: 6px;
  color: #000;
}
.order-g-address-tel {
  font-size: 14px;
  color: #333;
}
.order-g-address-tel-call {
  color: var(--ColorMain);
  font-weight: 650;
  margin-left: 10px;
}
.order-g-address-detail {
  font-size: 14px;
  color: #333;
}
.order-g-address-btn {
  display: flex;
  width: 70px;
  align-items: center;
  justify-content: flex-end;
}
.order-g-address-btn text {
  padding: 4px 10px;
  border: 1rpx solid #ddd;
  border-radius: 100px;
  font-size: 13px;
  text-align: center;
}
.order-g-about {
  display: flex;
  margin-top: 15px;
  color: #333;
}
.order-g-about-label {
  display: flex;
  width: 80px;
}
.order-g-about-value {
  display: flex;
  flex: 1;
  justify-content: flex-end;
}
.address-bottom {
  width: 100%;
  height: 3px;
  display: flex;
}
.address-bottom image {
  width: 100%;
  height: 100%;
}
