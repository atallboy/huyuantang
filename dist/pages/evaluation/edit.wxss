page {
  background-color: #f1f1f1;
}
.main-star {
  width: 250px;
  margin: 0 auto;
  margin-bottom: 20px;
}
.star-demo-top {
  padding-top: 10px;
}
.star-demo-top .result {
  font-size: 14px;
  color: #ff5800;
  text-align: center;
  line-height: 60px;
  font-size: 16px;
}
.star-demo-middle {
  text-align: center;
  font-size: 12px;
  color: #707070;
  margin-top: 30px;
  margin-bottom: 20px;
}
.star-demo-bottom {
  width: 220px;
  margin: 0 auto;
  margin-bottom: 10px;
}
.star-demo-bottom .title {
  flex: 1;
  font-size: 14px;
  height: 36px;
  line-height: 30px;
  margin-right: 5px;
  color: #707070;
}
.btn-wrap {
  background-color: #fff;
  margin: 20px 0;
}
.btn {
  width: 100%;
  height: 40px;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 2px;
}
.txt-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10px;
}
.txt-content {
  width: 100%;
  height: 100px;
  padding: 10px;
  border-radius: 4px;
}
