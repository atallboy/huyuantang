page {
  background-color: #f1f1f1;
}
.main-star {
  width: 250px;
  margin: 0 auto;
  margin-bottom: 20px;
}
.star-demo-top {
  padding-top: 10px;
}
.star-demo-top .result {
  font-size: 14px;
  color: #ff5800;
  text-align: center;
  line-height: 60px;
  font-size: 16px;
}
.star-demo-middle {
  text-align: center;
  font-size: 12px;
  color: #707070;
  margin-top: 30px;
  margin-bottom: 20px;
}
.star-demo-bottom {
  width: 220px;
  margin: 0 auto;
  margin-bottom: 10px;
}
.star-demo-bottom .title {
  flex: 1;
  font-size: 14px;
  height: 36px;
  line-height: 30px;
  margin-right: 5px;
  color: #707070;
}
.btn-wrap {
  background-color: #fff;
  margin: 20px 0;
}
.btn {
  width: 100%;
  height: 40px;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 2px;
}
.txt-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10px;
}
.txt-content {
  width: 100%;
  height: 100px;
  padding: 10px;
  border-radius: 4px;
}
.attribute-wrap {
  padding: 10px 0;
  display: flex;
  flex: 1;
}
.attribute-row {
  width: 100%;
}
.attribute-label {
  font-size: 15px;
  padding: 10px 0;
}
.attribute-list {
  padding: 0 10px 5px;
  display: flex;
  flex-wrap: wrap;
}
.attribute-item {
  padding: 4px 10px;
  border: 1rpx solid #ddd;
  color: #666;
  border-radius: 100px;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 12px;
}
.attribute-item-selected {
  background-color: var(--ColorMain);
  color: #fff;
}
.placeholderClass {
  font-size: 12px;
}
.sel-icon {
  width: 20px;
  height: 20px;
}
.yj-form-row-pick-content {
  display: flex;
}
.picker-input {
  display: flex;
  flex: 1;
  align-items: center;
}
.yj-form-row-item-sel {
  display: flex;
  width: 50px;
  justify-content: center;
  align-items: center;
}
.user-toast {
  background-color: #fff;
  height: 100%;
  padding-top: 10px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.user-wrap {
  display: flex;
  flex-direction: column;
  padding: 10px 15px;
}
.user-item-header {
  font-weight: 700;
}
.user-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40px;
}
.user-id {
  display: flex;
  width: 40px;
  align-items: center;
  justify-content: center;
}
.user-pic {
  display: flex;
  width: 60px;
  align-items: center;
  justify-content: center;
}
.user-pic image {
  width: 28px;
  height: 28px;
  border-radius: 100px;
}
.user-name {
  display: flex;
  flex: 1;
  overflow: hidden;
  align-items: center;
  padding-left: 10px;
}
.user-act {
  display: flex;
  width: 50px;
  align-items: center;
  justify-content: center;
}
.user-act-btn {
  color: var(--ColorMain);
}
.search-container {
  padding: 10px;
  border-bottom: 5px solid #f7f7f7;
}
.search-wrap {
  display: flex;
}
.search-item {
  display: flex;
  width: 80px;
  font-size: 12px;
  align-items: center;
}
.search-iuput {
  display: flex;
  flex: 1;
  background-color: #f7f7f7;
  border-radius: 100px;
  padding: 0 16px;
}
.search-iuput input {
  width: 100%;
  height: 100%;
}
.search-btn {
  margin-left: 8px;
  display: flex;
  width: 60px;
  background-color: var(--ColorMain);
  color: #fff;
  border-radius: 100px;
  align-content: center;
  justify-content: center;
  padding: 4px 0;
}
.page-wrap {
  display: flex;
  padding: 10px;
}
.page-act {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
}
.page-btn {
  display: flex;
  width: 70px;
  font-weight: 600;
}
