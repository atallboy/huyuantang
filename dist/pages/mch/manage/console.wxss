page {
  background-color: var(--defaultBgColor);
}
.container {
  padding: 10px;
}
.mch-info {
  background-color: #fff;
  border-radius: 5px;
  padding: 10px;
  margin-bottom: 15px;
}
.order-conatainer {
  padding: 10px;
  background-color: #fff;
  border-radius: 5px;
  margin-bottom: 15px;
}
.order-header {
  display: flex;
  padding: 5px 0 15px;
}
.order-header-name {
  display: flex;
  flex: 1;
  font-weight: 650;
  font-size: 15px;
  align-items: center;
}
.order-header-more {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
  font-size: 13px;
  color: #666;
}
.order-header-more image {
  width: 12px;
  height: 12px;
}
.order-list {
  display: flex;
}
.order-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.order-item-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 35px;
  position: relative;
  width: 35px;
  margin: 8px 0;
}
.order-item-icon image {
  width: 100%;
  height: 100%;
}
.badge {
  position: absolute;
  right: -10px;
  top: -10px;
}
.order-item-name {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #666;
  height: 25px;
}
.store_pic {
  width: 70px;
  height: 70px;
  border-radius: 4px;
  border: 1px solid #46B767;
  box-sizing: content-box;
}
.store_name {
  font-weight: 650;
  font-size: 17px;
  margin-bottom: 5px;
}
.boss_name {
  font-size: 15px;
  color: #888;
}
.ercode_pic {
  width: 30px;
  height: 30px;
}
.ercode-name {
  font-size: 13px;
  color: #46B767;
}
.earnings-container {
  display: flex;
  border-radius: 5px;
  background-color: #fff;
  padding: 10px 0 10px 10px;
  margin-bottom: 15px;
}
.earnings-brief {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.earnings-price {
  font-size: 18px;
  font-weight: 700;
}
.earnings-name {
  font-size: 15px;
}
.earnings-tx {
  display: flex;
  width: 70px;
  align-items: center;
  justify-content: center;
}
.earnings-tx-btn {
  font-size: 13px;
  width: 100%;
  height: 30px;
  display: flex;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;
  background-color: var(--defaultBgColor);
  align-items: center;
  justify-content: center;
}
.earnings-tx-btn image {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}
.menu-container {
  background-color: #fff;
  border-radius: 5px;
}
.menu-header-name {
  padding-left: 10px;
  font-weight: 650;
  font-size: 15px;
}
.menu-icon {
  width: 40px;
  height: 40px;
}
.menu-name {
  font-size: 13px;
  line-height: 30px;
}
