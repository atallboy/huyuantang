page {
  background-color: #f7f7f7;
}
.tab-container {
  background-color: #FBF0EE;
}
.video-list-wrap {
  display: flex;
  flex-wrap: wrap;
}
.video-item {
  display: flex;
  flex-direction: column;
  width: 47%;
  margin-left: 2%;
  background-color: #fff;
  margin-top: 2vw;
}
.video-pic {
  display: flex;
  width: 100%;
  height: 130px;
}
.video-pic image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.video-title {
  display: flex;
  font-size: 15px;
  font-weight: 600;
  color: #222;
  height: 35px;
  align-items: center;
  padding-left: 6px;
}
.video-info {
  display: flex;
  margin-top: 0px;
  padding: 0 6px 10px 6px;
}
.video-sub-title {
  display: flex;
  flex: 1;
  align-items: center;
  color: #666;
  font-size: 13px;
}
.video-score {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
  color: #ff4500;
}
.video-watch {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: flex-end;
  color: #666;
}
