video {
  width: 100%;
}
.info {
  padding: 10px 10px 20px;
}
.title {
  font-size: 16px;
  font-weight: 700;
}
.sub-title {
  color: #666;
  font-size: 12px;
  margin-top: 6px;
}
.recommend {
  padding: 10px 10px 0;
  font-size: 15px;
}
.video-list-a-container {
  padding: 10px;
}
.video-list-a-wrap {
  display: flex;
  flex-direction: column;
}
.video-list-a-item {
  display: flex;
  padding: 15px 0;
}
.video-list-a-pic {
  display: flex;
  width: 120px;
  height: 80px;
}
.video-list-a-pic image {
  width: 100%;
  height: 100%;
  border-radius: 4px;
}
.video-list-a-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-left: 6px;
}
.video-list-a-title {
  height: 50px;
}
.video-list-a-summary {
  display: flex;
  flex: 1;
}
.video-list-a-summary-col {
  display: flex;
  flex: 1;
  font-size: 12px;
  color: #666;
  align-items: flex-end;
  padding-left: 3px;
}
.video-list-a-summary-col image {
  width: 18px;
  height: 18px;
  margin-right: 3px;
}
