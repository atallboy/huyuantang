.container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
.wrap {
  padding: 15px;
  background-color: #fff;
  border-radius: 4px;
}
.user {
  display: flex;
}
.headimg {
  display: flex;
  width: 60px;
  height: 60px;
  border-radius: 6px;
}
image {
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.info {
  display: flex;
  flex-direction: column;
  padding-left: 10px;
}
.name {
  display: flex;
  height: 35px;
  align-items: center;
  font-weight: 650;
  font-size: 16px;
}
.level {
  display: flex;
  flex: 1;
  align-items: center;
  color: #888;
}
.qrcode {
  width: 300px;
  height: 300px;
  margin-top: 10px;
}
.remark {
  margin-top: 10px;
  text-align: center;
  color: #888;
}
