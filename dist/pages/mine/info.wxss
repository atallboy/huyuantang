.yj-form-row-pick-content {
  display: flex;
}
.picker-input {
  display: flex;
  flex: 1;
}
.yj-form-row-item-sel {
  display: flex;
  width: 50px;
  justify-content: center;
  align-items: center;
}
.submit-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  z-index: 99999;
}
.submit-btn {
  color: #fff;
  background-color: var(--ColorMain);
  border-radius: 2rpx;
  width: 92%;
  margin: 0 auto;
  margin-top: 20px;
  margin-bottom: 20px;
}
.image-upload-container {
  display: flex;
  flex-direction: column;
}
.image-upload-container .image-upload-wrap {
  display: flex;
  flex: 1;
  background-color: #fff;
  padding: 20px 0;
}
.image-upload-container .image-upload-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.image-upload-container .image-upload-preview {
  display: flex;
  flex: 1;
}
.image-upload-container .image-upload-preview image {
  width: 120px;
  height: 120px;
}
.image-upload-container .image-upload-btn {
  display: flex;
  flex: 1;
}
.image-upload-container .image-upload-select {
  width: 100px;
  padding: 6px 0;
  text-align: center;
  background-color: #ddd;
  border-radius: 6px;
  margin-top: 10px;
}
.unit {
  color: #FA5C37;
}
.price {
  font-size: 30px;
  color: #FA5C37;
}
.msg {
  padding: 10px;
  text-align: center;
  margin-top: 100px;
  font-size: 16px;
