/* pages/erkai/team/team.wxss */
image {
  display: block;
  width: 125rpx;
  height: 125rpx;
  border-radius: 4px;
}
.team-container {
  display: flex;
  flex: 1;
  padding: 15px;
  flex-direction: column;
}
.team-wrap {
  display: flex;
  flex: 1;
  flex-direction: column;
  background-color: #fff;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 6px;
}
.team-cate {
  display: flex;
  flex: 1;
  font-weight: 700;
  margin-bottom: 10px;
}
.team-list {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
}
.team-item {
  display: flex;
  width: 175rpx;
  flex-direction: column;
  padding-right: 50rpx;
  margin-bottom: 30rpx;
}
.team-pic {
  display: flex;
  flex: 1;
}
.team-name {
  display: flex;
  flex: 1;
}
.team-name-txt {
  width: 100%;
  font-size: 12px;
  color: #777;
  max-height: 30px;
  line-height: 30px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: center;
}
