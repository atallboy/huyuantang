.qrcode-toast {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.qrcode-wrap {
  width: 280px;
  height: 280px;
  background-color: #fff;
  border-radius: 6px;
  padding: 10px;
}
.qrcode-wrap image {
  width: 100%;
  height: 100%;
}
.qrcode-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20px;
}
.qrcode-close-btn {
  width: 30px;
  height: 30px;
  background-color: #fff;
  border-radius: 100px;
}
.qrcode-close-btn image {
  width: 100%;
  height: 100%;
}
.btn-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}
.btn-item {
  width: 100px;
  line-height: 30px;
  border-radius: 100px;
  font-size: 13px;
  background-color: var(--ColorMain);
  color: #fff;
  text-align: center;
  margin: 0 10px;
}
.create-btn {
  width: 130px;
  line-height: 40px;
  margin: 0 auto;
  border-radius: 100px;
  background-color: var(--ColorMain);
  color: #fff;
  text-align: center;
  margin-top: 30px;
}
.menu-container {
  background-color: #fff;
  padding: 5px 15px;
}
.menu-label {
  color: #666;
}
.menu-name image {
  width: 20px;
  height: 20px;
}
image {
  display: block;
  width: 125rpx;
  height: 125rpx;
  border-radius: 4px;
}
.team-container {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-top: 10px;
}
.team-wrap {
  display: flex;
  flex: 1;
  flex-direction: column;
  background-color: #fff;
  padding: 10px 15px;
  margin-bottom: 10px;
  border-radius: 6px;
}
.team-cate {
  display: flex;
  flex: 1;
  font-weight: 700;
  margin-bottom: 10px;
}
.team-list {
  display: flex;
  flex: 1;
  flex-direction: row;
  flex-wrap: wrap;
}
.team-item {
  display: flex;
  width: 175rpx;
  flex-direction: column;
  padding-right: 50rpx;
  margin-bottom: 30rpx;
}
.team-pic {
  display: flex;
  flex: 1;
}
.team-name {
  display: flex;
  flex: 1;
}
.team-name-txt {
  width: 100%;
  font-size: 12px;
  color: #777;
  max-height: 30px;
  line-height: 30px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: center;
}
