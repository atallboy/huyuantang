/* pages/erkai/invite/invite.wxss */
page {
  background-color: #f7f7f7;
}
.big-cont {
  display: flex;
  min-height: 98vh;
  padding: 1vh;
  flex-direction: column;
}
.main-cont {
  display: flex;
  flex: 1;
  background-color: #fff;
  flex-direction: column;
  padding: 5px;
  border-radius: 10px;
}
/* 横排按钮 开始 */
.col-container {
  display: flex;
  /* background-color: #f5f5f5; */
  padding-bottom: 10px;
  border-bottom: 1rpx dashed #ddd;
}
.col-wrap {
  display: flex;
  flex: 1;
  flex-direction: row;
}
.border-r {
  border-right: 1rpx solid #f7f7f7;
}
.navigate {
  display: flex;
  flex: 1;
}
.col-item {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.col-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30px;
}
.col-icon image {
  width: 40px;
  height: 40px;
}
.col-name {
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 横排按钮 结束 */
.invite-container {
  display: flex;
}
.invite-wrap {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.invite-item {
  display: flex;
  flex: 1;
  flex-direction: row;
}
.invite-l {
  display: flex;
  width: 80px;
  padding: 15px 0 15px 15px;
}
.invite-r {
  display: flex;
  flex: 1;
  padding: 15px 15px 15px 0;
  border-bottom: 1rpx solid #f8f8f8;
}
.invite-pic {
  display: flex;
  justify-content: center;
  align-items: center;
}
.invite-pic image {
  width: 50px;
  height: 50px;
  border-radius: 100px;
}
.invite-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-content: space-between;
}
.invite-detail {
  display: flex;
  font-size: 17px;
  flex: 1;
  flex-direction: row;
  margin-bottom: 10px;
}
.invite-name {
  display: flex;
  font-size: 17px;
  flex: 1;
}
.invite-level {
  display: flex;
  font-size: 14px;
  width: 100px;
  justify-content: flex-end;
  color: #CD753E;
}
.invite-level image {
  width: 20px;
  height: 20px;
  margin-right: 2px;
}
.invite-time {
  display: flex;
  color: #888;
  font-size: 13px;
}
